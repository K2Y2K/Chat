<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lldiscovery_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:background="@drawable/selector_common_item"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/fragment_discovery_paddingleft"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_info"
            android:drawableLeft="@mipmap/ic_friend_circle"
            android:drawablePadding="10dp"
            android:text="@string/fragment_discovery_text"
            android:textSize="@dimen/fragment_discovery_textsize"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ad_time"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:layout_marginLeft="@dimen/fragment_discovery_paddingleft"
        android:text="@string/fragment_discovery_button_text"/>


</LinearLayout>