<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lluser_info"
    android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivUserPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_user_info_iv_marginright"
            android:layout_marginTop="@dimen/activity_user_info_iv_margintop"
            android:src="@mipmap/ic_new_friend" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_info_id"
        android:text=" "
        android:layout_marginTop="@dimen/activity_user_info_iv_margintop"/>


</LinearLayout>
    <Button
        android:layout_marginTop="@dimen/activity_user_info_iv_margintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_add"
        android:text="@string/activity_user_info_button_text"
        />
</LinearLayout>