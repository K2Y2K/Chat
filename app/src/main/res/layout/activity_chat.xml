<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_chat_listview_height"
        android:layout_weight="1"
        android:id="@+id/chat_view_list"
        android:divider="#ddd"
        android:dividerHeight="@dimen/activity_chat_listview_dividerheight1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_chat_ll_marginbottom"
        android:background="#F0F0F0"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/chat_content"
            android:layout_width="@dimen/activity_chat_edittext_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/et_style"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_chat_edittext_paddingleft"
            android:textColor="#212121" />
        <Button
            android:id="@+id/chat_send"
            android:layout_width="@dimen/activity_chat_button_width"
            android:layout_height="@dimen/activity_chat_button_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_chat_button_marginleft"
            android:layout_marginRight="@dimen/activity_chat_button_marginright"
            android:layout_weight="0.2"
            android:background="@drawable/button_style"
            android:text="@string/activity_chat_button_text"
            android:textColor="@color/white" />

    </LinearLayout>



</LinearLayout>